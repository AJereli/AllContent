        <Label x:Name="label" HorizontalAlignment="Left" Margin="90,339,0,0" VerticalAlignment="Top" Width="120" KeyboardNavigation.TabIndex="3">
            <Hyperlink NavigateUri="RegistrPage.xaml">Регистрация</Hyperlink>
        </Label>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="90,245,0,0" VerticalAlignment="Top" Height="24" Width="120" KeyboardNavigation.TabIndex="1"/>
        <Label x:Name="infoLable" Content="" HorizontalAlignment="Left" Margin="33,130,0,0" VerticalAlignment="Top" Width="243" Height="41" FontSize="13.333" RenderTransformOrigin="0.5,0.5" KeyboardNavigation.IsTabStop="False">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.256"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.496"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Grid>


</Page>
